<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.carrito_buscar.view.CarritoBuscarActivity">

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="Buscar productos" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="20dp"
        android:orientation="horizontal">


        <EditText
            android:layout_weight="3"
            android:layout_width="0dp"
            android:id="@+id/etCarritoBuscarQuery"
            android:layout_height="wrap_content"
            android:hint="Ingrese producto a buscar"/>

        <Button
            android:id="@+id/btnCarritoBuscarBuscar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:text="Buscar" />

    </LinearLayout>

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/etCarritoBuscarVacio"
        android:textSize="20dp"
        android:textStyle="bold"
        android:hint="Lista vacia."/>

    <android.support.v7.widget.RecyclerView
        android:paddingHorizontal="30sp"
        android:id="@+id/rvListaCarritoBuscar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>